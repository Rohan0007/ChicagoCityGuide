<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.chicagocityguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiningActivity"
            android:screenOrientation="portrait"
            android:label="Dine n Drink" />
        <activity
            android:name=".AttractionsActivity"
            android:screenOrientation="portrait"
            android:label="Famous Attractions" />
        <activity
            android:name=".NeighborhoodsActivity"
            android:screenOrientation="portrait"
            android:label="Neighborhoods" />
        <activity
            android:name=".MuseumsActivity"
            android:screenOrientation="portrait"
            android:label="Museums" />
        <activity
            android:name=".HotelsActivity"
            android:screenOrientation="portrait"
            android:label="Popular Hotels" />
        <activity
            android:name=".AirBnBActivity"
            android:screenOrientation="portrait"
            android:label="Cool AirBnB Rentals" />
    </application>
</manifest>